---
import Layout from "../../layouts/layout.astro";

import "../../css/servicio-agileops.css";

import BtnReserva from "../../components/btn-reserva.astro";
import Indicador from "../../components/serv-agileops-indicadores.astro";
import AlcanceIcon from "../../components/serv-agileops-alcance-icon.astro";
import CardPop from "../../components/serv-agileops-cards-pops.astro";
---

<Layout>
  <!-- <img src="/img/agileops.png" alt="" style="width: 100%;" class="mt-5" /> -->

  <section>
    <div class="content content-inicio">
      <img src="/img/title-agileops.png" alt="AgileOps titulo" />
      <div class="mt-3">
        <BtnReserva />
      </div>
    </div>
  </section>
  <section>
    <div class="content content-ultima">
      <div class="content-limit flex justify-center align-center gap-3 mt-3">
        <h2 class="font-4" style="min-width: 200px;">
          The next generation of IT managed services<span class="color-verde"
            >.</span
          >
        </h2>
        <img
          src="/img/ultima-agileops.png"
          alt="Trazo decorativo agileops"
          style="min-width: 350px;"
        />
        <div class="font-light font-1" style="min-width: 300px;">
          <p>
            <strong class="color-verde">AgileOps</strong> is an autonomous managed
            services platform designed to intelligently scale and automate IT operations.
          </p>
          <p>
            This platform <strong>replaces</strong> manual activities in the <strong
              >NOC, IT operations, and help desk tasks up to 90%.</strong
            >
          </p>
        </div>
      </div>
    </div>
  </section>
  <section>
    <div class="content content-indicadores mt-6">
      <div class="content-limit" style="padding: 100px 0;">
        <h2
          class="font-light title-indicadores font-4"
          style="letter-spacing: 10px;"
        >
          Some KPIs:
        </h2>
        <div class="box-indicadores mt-3">
          <div class="flex justify-center gap-3">
            <Indicador>
              <div slot="porcent">
                <small style="font-size: 20px;">Up to</small> 70%
              </div>
              <div slot="content">Reassignment of FTEs</div>
            </Indicador>
            <Indicador>
              <div slot="porcent">
                <small style="font-size: 20px;">Up to</small> 99%
              </div>
              <div slot="content">Noise reduction</div>
            </Indicador>
            <Indicador>
              <div slot="porcent">
                <small style="font-size: 20px;">Up to</small> 30%
              </div>
              <div slot="content">
                <span class="color-verde">Tickets</span>
                <br /> Reduction f incidents
              </div>
            </Indicador>
          </div>
          <div class="flex justify-center gap-3 mt-2">
            <Indicador>
              <div slot="porcent">
                <small style="font-size: 20px;">Up to</small> 50%
              </div>
              <div slot="content">
                <span class="color-verde">SLAs</span>
                <br />
                Average recovery time
              </div>
            </Indicador>
            <Indicador>
              <div slot="porcent">
                <small style="font-size: 20px;">Up to</small> 98%
              </div>
              <div slot="content">
                <span class="color-verde">SLAs</span>
                <br />
                Incident resolution time
              </div>
            </Indicador>
            <Indicador>
              <div slot="porcent">
                <small style="font-size: 20px;">Up to</small> 40%
              </div>
              <div slot="content">Optimization in windows</div>
            </Indicador>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section>
    <div
      class="content content-celerar relative hidden"
      style="padding-top: 200px; padding-bottom: 200px;"
    >
      <img src="/img/malla.png" alt="Malla" class="absolute top-0 left-0" />
      <img src="/img/malla.png" alt="Malla" class="absolute right-0 bottom-0" />

      <div class="content-limit flex justify-center gap-6 box-up-down">
        <article class="text-center">
          <img src="/img/row-down.png" alt="flecha abajo" />
          <h2>IT cost reduction</h2>
          <hr style="width: 60px; margin: auto;" />
          <p class="font-light">
            <small>
              Optimize and automate ITOps activities and reduce costs.
            </small>
          </p>
        </article>
        <article class="text-center">
          <img src="/img/row-up.png" alt="flecha abajo" />
          <h2>Availability</h2>
          <hr style="width: 60px; margin: auto;" />
          <p>
            <small>
              Accelerate remediation and restore availability faster.
            </small>
          </p>
        </article>
        <article class="text-center">
          <img src="/img/row-up.png" alt="flecha abajo" />
          <h2>User Experience</h2>
          <hr style="width: 60px; margin: auto;" />
          <p>
            <small> Reduce downtime and mean time to resolution. </small>
          </p>
        </article>
      </div>
    </div>
  </section>
  <section>
    <div class="content content-proactivas">
      <div class="content content-limit">
        <div class="flex justify-between">
          <h2 class="title-proactivas font-4">
            Evolve from reactive to <span class="color-verde">PROACTIVE</span>
            operations<span class="color-verde">.</span>
          </h2>
          <img
            src="/img/lap-cicle.png"
            alt="Lap"
            style="width: 600px; margin-top: -50px;"
          />
        </div>
        <div class="box-proactivas mt-3">
          <article
            onclick="document.getElementById('card-pop-1').classList.add('active');"
          >
            <img
              src="/img/icon-proa-1.png"
              alt="Icono Correlación de eventos"
            />
            <h2>Event Correlation</h2>
          </article>
          <article
            onclick="document.getElementById('card-pop-2').classList.add('active');"
          >
            <img
              src="/img/icon-proa-2.png"
              alt="Icono Análisis de causa raíz"
            />
            <h2>Root cause analysis</h2>
          </article>
          <article
            onclick="document.getElementById('card-pop-3').classList.add('active');"
          >
            <img src="/img/icon-proa-3.png" alt="Icono Mapa de Impacto" />
            <h2>Impact Map</h2>
          </article>
          <article
            onclick="document.getElementById('card-pop-4').classList.add('active');"
          >
            <img src="/img/icon-proa-4.png" alt="Icono Autoremediación" />
            <h2>Self—remediation</h2>
          </article>
          <article
            onclick="document.getElementById('card-pop-5').classList.add('active');"
          >
            <img src="/img/icon-proa-5.png" alt="Icono Cambios  autónomos" />
            <h2>Autonomous changes</h2>
          </article>
          <article
            onclick="document.getElementById('card-pop-6').classList.add('active');"
          >
            <img src="/img/icon-proa-6.png" alt="Icono Cambios  autónomos" />
            <h2>Autonomous requests</h2>
          </article>
          <article
            onclick="document.getElementById('card-pop-7').classList.add('active');"
          >
            <img src="/img/icon-proa-7.png" alt="Icono Cambios  autónomos" />
            <h2>Self-management</h2>
          </article>
        </div>
      </div>
    </div>
    <CardPop id="card-pop-1">
      <span slot="title">Event Correlation</span>
      <div slot="image"><img src="/img/icon-proa-1.png" alt="Icono" /></div>
      <span slot="text">
        AgileOps aggregates, normalizes, enriches, and processes any type of
        data from multiple domains using machine learning models to correlate
        events and transform them into actionable items.
      </span>
    </CardPop>
    <CardPop id="card-pop-2">
      <span slot="title">Root cause analysis</span>
      <div slot="image"><img src="/img/icon-proa-2.png" alt="Icono" /></div>
      <span slot="text">
        AgileOps can identify the potential root cause of an incident through
        service models that locate the affected component in any communication
        layer, from the lowest level, such as a server, to the highest, such as
        communication with Internet Service Providers (ISPs).
      </span>
    </CardPop>
    <CardPop id="card-pop-3">
      <span slot="title">Impact Map</span>
      <div slot="image"><img src="/img/icon-proa-3.png" alt="Icono" /></div>
      <span slot="text">
        AgileOps utilizes impact maps to automatically identify a component
        affected by an incident.
      </span>
    </CardPop>
    <CardPop id="card-pop-4">
      <span slot="title">Self—remediation</span>
      <div slot="image"><img src="/img/icon-proa-4.png" alt="Icono" /></div>
      <span slot="text">
        Automated process that restores the health of a component without human
        intervention, improving efficiency, availability, and ensuring
        compliance with service levels.
      </span>
    </CardPop>
    <CardPop id="card-pop-5">
      <span slot="title">Autonomous changes</span>
      <div slot="image"><img src="/img/icon-proa-5.png" alt="Icono" /></div>
      <span slot="text">
        Automated processes that implement adjustments in systems or processes
        without human intervention, increasing efficiency and reducing
        operational burden.
      </span>
    </CardPop>
    <CardPop id="card-pop-6">
      <span slot="title">Autonomous requests</span>
      <div slot="image"><img src="/img/icon-proa-6.png" alt="Icono" /></div>
      <span slot="text">
        Automated actions that execute without direct human intervention,
        streamlining tasks and improving the efficiency of the system.
      </span>
    </CardPop>
    <CardPop id="card-pop-7">
      <span slot="title">Self-management</span>
      <div slot="image"><img src="/img/icon-proa-7.png" alt="Icono" /></div>
      <span slot="text">
        A unique component in the market, capable of autonomously managing the
        lifecycle of an incident, can decide whether to escalate the case to the
        manufacturer or to level L3, attaching all necessary history and
        evidence for prompt resolution.
      </span>
    </CardPop>
  </section>
  <section>
    <div class="content content-alcance">
      <div class="content-limit mt-4">
        <h2 class="text-center font-6">
          <span class="color-verde"> TECHNOLOGIES</span> WE SUPPORT
        </h2>
        <!-- <p class="text-center font-2" style="letter-spacing: 25px;">
          TECNOLOGÍAS
        </p> -->

        <div class="flex align-center gap-3 mt-4">
          <AlcanceIcon>
            <img
              src="/img/serv-agile-alcance-icon-1.png"
              alt="Icono Servidores"
              slot="img"
            />
            <span slot="text">Servers</span>
          </AlcanceIcon>
          <AlcanceIcon>
            <img
              src="/img/serv-agile-alcance-icon-2.png"
              alt="Icono Redes"
              slot="img"
            />
            <span slot="text">Network</span>
          </AlcanceIcon>
          <AlcanceIcon>
            <img
              src="/img/serv-agile-alcance-icon-3.png"
              alt="Icono Apps"
              slot="img"
            />
            <span slot="text">Apps</span>
          </AlcanceIcon>
          <AlcanceIcon>
            <img
              src="/img/serv-agile-alcance-icon-4.png"
              alt="Icono BD"
              slot="img"
            />
            <span slot="text">BD</span>
          </AlcanceIcon>
          <AlcanceIcon>
            <img
              src="/img/serv-agile-alcance-icon-5.png"
              alt="Icono EndPoints"
              slot="img"
            />
            <span slot="text">EndPoints</span>
          </AlcanceIcon>
          <AlcanceIcon>
            <img
              src="/img/serv-agile-alcance-icon-6.png"
              alt="Icono IAAS"
              slot="img"
            />
            <span slot="text">IAAS</span>
          </AlcanceIcon>
          <AlcanceIcon>
            <img
              src="/img/serv-agile-alcance-icon-7.png"
              alt="Icono PAAS"
              slot="img"
            />
            <span slot="text">PAAS</span>
          </AlcanceIcon>
          <AlcanceIcon>
            <img
              src="/img/serv-agile-alcance-icon-8.png"
              alt="Icono SAAS"
              slot="img"
            />
            <span slot="text">SAAS</span>
          </AlcanceIcon>
          <AlcanceIcon>
            <img
              src="/img/serv-agile-alcance-icon-9.png"
              alt="Icono Micro Servicios"
              slot="img"
            />
            <span slot="text">Micro Services</span>
          </AlcanceIcon>
        </div>
        <div
          class="card-gray content-image mt-5 flex align-center gap-5 font-light"
          style="background-image:url('img/fondo-card.png'); background-attachment: unset;"
        >
          <h3 class="font-4">
            We replace the tasks handled by your
            <span class="color-verde"> L1 </span> and
            <span class="color-verde"> L2 </span>
            agents with our digital technicians<span class="color-verde">.</span
            >
          </h3>
          <div class="text-center item-line-agente" style="min-width: 120px;">
            <img src="/img/person-lap.png" alt="Icono user lap" />
            <br />
            <strong>L1</strong> digital technicians
          </div>
          <div class="text-center" style="min-width: 120px;">
            <img src="/img/person-lap.png" alt="Icono user lap" />
            <br />
            <strong>L2</strong> digital technicians
          </div>
        </div>
      </div>
    </div>
  </section>
  <section>
    <div class="content content-org content-image mt-6">
      <div class="content-limit" style="padding-top: 100px;">
        <div class="card-org">
          <h2 class="text-center">ORGANIZATION</h2>
          <div class="flex gap-1 mt-2 justify-between">
            <div class="item-org">
              <img src="/img/icon-agil-org-1.png" alt="Icono decorativo" />
            </div>
            <div class="item-org">
              <img src="/img/icon-agil-org-2.png" alt="Icono decorativo" />
            </div>
            <div class="item-org">
              <img src="/img/icon-agil-org-3.png" alt="Icono decorativo" />
            </div>
            <div class="item-org">
              <img src="/img/icon-agil-org-4.png" alt="Icono decorativo" />
            </div>
            <div class="item-org">
              <img src="/img/icon-agil-org-5.png" alt="Icono decorativo" />
            </div>
            <div class="item-org">
              <img src="/img/icon-agil-org-6.png" alt="Icono decorativo" />
            </div>
            <div class="item-org">
              <img src="/img/icon-agil-org-7.png" alt="Icono decorativo" />
            </div>
            <div class="item-org">
              <img src="/img/icon-agil-org-8.png" alt="Icono decorativo" />
            </div>
            <div class="item-org">
              <img src="/img/icon-agil-org-9.png" alt="Icono decorativo" />
            </div>
          </div>
          <div class="flex justify-between mt-1 box-btns-org">
            <button class="btn-org"> Observability </button>
            <button class="btn-org"> Monitoring </button>
            <button class="btn-org"> Topology </button>
            <button class="btn-org"> Changes </button>
          </div>
        </div>
        <img
          src="/img/en/agile-eventos.png"
          alt="Eventos"
          style="width: 100%;"
        />
      </div>
    </div>
  </section>
</Layout>
