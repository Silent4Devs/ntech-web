<style>
  article {
    text-align: center;
  }
  .porcent {
    font-size: 70px;
    transform: translateY(18px);
  }
  .box-border {
    width: 260px;
    height: 200px;
    position: relative;
    z-index: 2;
    display: grid;
    place-items: center;
  }
  .box-border::before {
    content: "";
    width: 100%;
    height: 100%;
    border-radius: 20px;
    top: 0;
    left: 0;
    position: absolute;
    z-index: -1;

    background: linear-gradient(180deg, var(--verde) 30%, #c4f10d22 100%);
  }
  .box-border h3 {
    width: calc(100% - 5px);
    height: calc(100% - 5px);
    padding: 18px;
    background-color: #0f0f10;
    border-radius: 20px;
    display: grid;
    place-items: center;
  }
</style>

<article>
  <div class="porcent color-verde font-bold">
    <slot name="porcent" />
  </div>
  <div class="box-border">
    <h3 class="font-3">
      <slot name="content" />
    </h3>
  </div>
</article>
